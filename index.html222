<!DOCTYPE html>
<html lang="pl">
<head>
  <meta charset="UTF-8" />
  <title>Geoportal – miasta</title>

  <!-- OpenLayers CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/ol@latest/ol.css">

  <style>
    html, body {
      margin: 0;
      padding: 0;
      height: 100%;
    }
    #map {
      width: 100%;
      height: 100%;
    }
  </style>
</head>
<body>

<div id="map"></div>

<!-- OpenLayers JS -->
<script src="https://cdn.jsdelivr.net/npm/ol@latest/dist/ol.js"></script>

<script>
  // PODKŁAD OSM
  const osmLayer = new ol.layer.Tile({
    source: new ol.source.OSM()
  });

  // WARSTWA WMS Z GEOSERVERA
  const miastaLayer = new ol.layer.Tile({
    source: new ol.source.TileWMS({
      url: 'http://localhost:9000/geoserver/geo/wms',
      params: {
        'LAYERS': 'geo:miasta',
        'TILED': true
      },
      serverType: 'geoserver'
    })
  });

  // MAPA
  const map = new ol.Map({
    target: 'map',
    layers: [
      osmLayer,
      miastaLayer
    ],
    view: new ol.View({
      center: ol.proj.fromLonLat([21.0122, 52.2297]), // Warszawa
      zoom: 6
    })
  });
</script>

</body>
</html>
